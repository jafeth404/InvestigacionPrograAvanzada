@model InvoiceManager.ViewModels.DashboardViewModel

@{
    ViewData["Title"] = "Panel principal";
}

<div class="container">

    <div class="mb-4">
        <h1 class="fw-bold">Panel de control</h1>
        <p class="text-muted mb-0">Bienvenido a tu gestor de facturas.</p>
    </div>

    <div class="row g-4">

        <!-- Clientes -->
        <div class="col-md-6">
            <div class="card shadow-sm h-100 dashboard-card">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">Clientes</h5>
                    <p class="text-muted">Gestioná tus clientes.</p>

                    <div class="mt-auto d-flex justify-content-between align-items-end">
                        <div>
                            <p class="text-muted mb-1">Clientes totales</p>
                            <p class="h4">@Model.TotalClientes</p>
                        </div>

                        <div>
                            <a asp-controller="Customers" asp-action="Index" class="btn btn-outline-light btn-sm">Ver</a>
                            <a asp-controller="Customers" asp-action="Create" class="btn btn-primary btn-sm ms-2">Nuevo</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Facturas -->
        <div class="col-md-6">
            <div class="card shadow-sm h-100 dashboard-card">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">Facturas</h5>
                    <p class="text-muted">Creá y administrá facturas.</p>

                    <div class="row mt-auto">
                        <div class="col-4">
                            <p class="text-muted mb-1">Total</p>
                            <p class="h5">@Model.TotalFacturas</p>
                        </div>
                        <div class="col-4">
                            <p class="text-muted mb-1">Pendientes</p>
                            <p class="h5">@Model.FacturasPendientes</p>
                        </div>
                        <div class="col-4">
                            <p class="text-muted mb-1">Pagadas</p>
                            <p class="h5">@Model.FacturasPagadas</p>
                        </div>
                    </div>

                    <div class="mt-3 d-flex justify-content-between">
                        <a asp-controller="Invoices" asp-action="Index" class="btn btn-outline-light btn-sm">Ver</a>
                        <a asp-controller="Invoices" asp-action="Create" class="btn btn-success btn-sm">Nueva</a>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>