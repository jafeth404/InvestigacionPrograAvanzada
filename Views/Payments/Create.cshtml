@model InvoiceManager.Models.Payment

@{
    ViewData["Title"] = "Registrar Pago";
}

<h1>Registrar Pago para Factura @ViewBag.InvoiceId</h1>

<form asp-action="Create" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <input type="hidden" asp-for="InvoiceId" />

    <div>
        <label asp-for="FechaPago"></label>
        <input asp-for="FechaPago" type="date" />
        <span asp-validation-for="FechaPago" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Monto"></label>
        <input asp-for="Monto" type="number" step="0.01" />
        <span asp-validation-for="Monto" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Metodo"></label>
        <input asp-for="Metodo" />
        <span asp-validation-for="Metodo" class="text-danger"></span>
    </div>

    <div>
        <button type="submit">Guardar pago</button>
        <a asp-controller="Invoices" asp-action="Details" asp-route-id="@ViewBag.InvoiceId">Cancelar</a>
    </div>
</form>