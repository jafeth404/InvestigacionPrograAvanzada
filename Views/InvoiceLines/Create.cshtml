@model InvoiceManager.Models.InvoiceLine

@{
    ViewData["Title"] = "Agregar Línea";
}

<h1>Agregar Línea a Factura @ViewBag.InvoiceId</h1>

<form asp-action="Create" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <!-- Importante para saber a qué factura pertenece -->
    <input type="hidden" asp-for="InvoiceId" />

    <div>
        <label asp-for="Descripcion"></label>
        <input asp-for="Descripcion" />
        <span asp-validation-for="Descripcion" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Cantidad"></label>
        <input asp-for="Cantidad" type="number" min="1" />
        <span asp-validation-for="Cantidad" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="PrecioUnidad"></label>
        <input asp-for="PrecioUnidad" type="number" step="0.01" />
        <span asp-validation-for="PrecioUnidad" class="text-danger"></span>
    </div>

    <div>
        <button type="submit">Guardar línea</button>
        <a asp-controller="Invoices" asp-action="Details" asp-route-id="@ViewBag.InvoiceId">Cancelar</a>
    </div>
</form>