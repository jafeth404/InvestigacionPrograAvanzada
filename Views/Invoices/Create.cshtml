    </div>

    <div>
        <label asp-for="FechaLimite"></label>
        <input asp-for="FechaLimite" type="date" />
        <span asp-validation-for="FechaLimite" class="text-danger"></span>
    </div>

    <div>
        <!-- No pedimos TotalAmount ni Status aquÃ­, se calculan -->
        <button type="submit">Guardar factura</button>
        <a asp-action="Index">Cancelar</a>
    </div>
</form>