@model InvoiceManager.Models.Invoice

@{
    ViewData["Title"] = "Crear Factura";
}

<h1>Crear Factura</h1>

<form asp-action="Create" method="post">
    <!-- ðŸ‘‡ Esto muestra los errores de validaciÃ³n -->
    <div asp-validation-summary="All" class="text-danger"></div>

    <div>
        <label>Cliente</label>
        <select asp-for="CustomerId" asp-items="ViewBag.CustomerId"></select>
        <span asp-validation-for="CustomerId" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="FechaEmision"></label>
        <input asp-for="FechaEmision" type="date" />
